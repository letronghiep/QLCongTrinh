@model QLCongTrinh.Models.TienDo

@{
    ViewBag.Title = "Xác nhận xóa?";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var hoanthanh = Model.TrangThai == true ? "Đã hoàn thành" : "Chưa hoàn thành";
}


<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CongTrinh.TenCT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CongTrinh.TenCT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai) <span>@hoanthanh</span>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GhiChu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions d-flex align-items-center justify-content-center gap-3">
            <input type="submit" value="Xóa" class="btn btn-primary btn-sm" style="width: 140px" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-sm btn-light", @style = "width: 140px" })
        </div>
    }
</div>
