@model QLCongTrinh.Models.CongTrinh

@{
    ViewBag.Title = Model.TenCT;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imageSrc = "~/wwwroot/Image/" + Model.HinhAnh;
}
<style>
    input, select, textarea {
        max-width: 100%
    }
</style>
@using (Html.BeginForm("Edit", "CongTrinhs", FormMethod.Post, new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()

<div class="row g-3">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaCT)

    <div class="col-md-12">
        @Html.LabelFor(model => model.TenCT, htmlAttributes: new { @class = "form-label" })
        <div class="">
            @Html.EditorFor(model => model.TenCT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenCT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-12">
        @Html.LabelFor(model => model.MaTaiKhoan, htmlAttributes: new { @class = "control-label" })
        <div class="">
            @Html.DropDownList("MaTaiKhoan", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaTaiKhoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.NgayBatDau, htmlAttributes: new { @class = "control-label" })
        <div class="">
            @Html.TextBoxFor(model => model.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        @Html.LabelFor(model => model.NgayKetThuc, htmlAttributes: new { @class = "control-label" })
        <div class="">
            @Html.TextBoxFor(model => model.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label mb-2" })
        <div class="col-md-12">
            <input type="file" id="fileUpload" name="fileUpload" class="form-control" value="@Model.HinhAnh" />
        </div>
    </div>

    <div class="col-md-12">
        @Html.LabelFor(model => model.NganSach.NganSachBD, htmlAttributes: new { @class = "control-label" })
        <div class="">
            @Html.EditorFor(model => model.NganSach.NganSachBD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NganSach.NganSachBD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success btn-sm" style="width: 160px">Lưu</button>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-sm btn-light", @style = "width: 160px" })
    </div>
</div>
}
@using (Html.BeginForm("Create", "ChiTietCTs", FormMethod.Get))
{
    @Html.Hidden("id", Model.MaCT)
    <input type="submit" value="Thêm nhân viên" class="btn btn-sm btn-primary" style="width: 160px" />
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
