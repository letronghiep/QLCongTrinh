@model QLCongTrinh.Models.CongTrinh

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    input, select, textarea {
        max-width: 100%
    }
</style>
@using (Html.BeginForm("Create", "CongTrinhs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row g-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenCT, htmlAttributes: new { @class = "control-label mb-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenCT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaTaiKhoan, "Tài khoản", htmlAttributes: new { @class = "control-label mb-2 col-md-2" })
            <div class="col-md-12">
                @Html.DropDownList("MaTaiKhoan", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTaiKhoan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.NgayBatDau, htmlAttributes: new { @class = "control-label mb-2" })
            <div class="">
                @Html.EditorFor(model => model.NgayBatDau, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.NgayKetThuc, htmlAttributes: new { @class = "control-label mb-2" })
            <div class="">
                @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })

            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label mb-2" })
            <div class="col-md-12">
                <input type="file" id="fileUpload" name="fileUpload" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NganSach, "Ngân sách ban đầu", htmlAttributes: new { @class = "control-label mb-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.NganSach.NganSachBD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NganSach.NganSachBD, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-success btn-sm" style="width: 160px">Thêm</button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-sm btn-light", @style = "width: 160px" })
            </div>
    </div>
}
@if (@ViewBag.err != null)
{
    <p class="alert-danger text-bg-danger bg-danger">@ViewBag.err</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
